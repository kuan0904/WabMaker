@using MyTool.Enums
@using MyTool.Services
@using MyTool.Tools
@model MyTool.ViewModels.PageModel<WebMaker.Entity.Models.erp_GetPayMessage>
@{

}

<table class="table table-striped table-bordered bootstrap-datatable">
    <tr>
        <th>入帳時間</th>
        <th>帳號</th>
        <th>金額</th>
        <th>訂單編號</th>
        <th>建立時間</th>
        <th>By排程</th>
        <th>狀態完成</th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.PayTime.ToDateString("yyyy/MM/dd HH:mm")</td>
            <td>@item.VirtualAccount</td>
            <td>@item.PayPrice</td>
            <td>@(item.erp_Order?.OrderNumber)</td>
            <td>@item.CreateTime.ToDateString("yyyy/MM/dd HH:mm")</td>
            <td>@(item.IsByQuery ? "Y" : "")</td>
            <td>@(item.IsEnabled ? "Y" : "")</td>
        </tr>
    }
    <tr class="active" style="text-align: right;font-size: 16px;">
        <td colspan="7">金額共計: @Model.PriceSum</td>
    </tr>
</table>

@Html.Partial("_Pagination", Model)
