@using MyTool.Services
@model string
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "變更手機號碼";
}

<section class="character-section mt-65">
    <div class="character-back character-back2">
        <div class="auto-container">
            <h2></h2>
        </div>
    </div>
</section>

@using (Html.BeginForm(null, null, FormMethod.Post))
{
    <input type="hidden" id="returnUrl" value="@Url.Action("UpdatePhoneCorfirm")" />
    <input type="hidden" id="successMessage" data-title="@ViewBag.Title" value="@MyTool.Enums.MessageType.Confirm" />

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <section class="hotnews-section mt-md-250">
        <div class="auto-container">
            <div class="text-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">首頁</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Profile","Member")">會員中心</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a href="@Url.Action()">@ViewBag.Title</a>
                    </li>
                </ol>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="w-back-g p-20">
                        @Html.Partial(WabMaker.Web.Controllers.BaseController.ViewName("Member", "_MemberMenu"))
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="w-back-g p-20">
                        <div class="hotnews-title">
                            <span class="hotnews-title-inner mb-20">@ViewBag.Title</span>
                        </div>
                        <div class="singup-inner mb-50 p-lg-rl-50">
                            <div class="form-group row">
                                <label class="col-sm-12 form-label text-red"></label>
                            </div>
                            @if (!string.IsNullOrEmpty(Model))
                            {
                            <div class="form-group row">
                                <label class="col-sm-3 form-label text-right">現在的手機號碼</label>
                                <div class="col-sm-8">
                                    <div>@Model</div>
                                </div>
                            </div>
                            }     
                            <div class="form-group row">
                                <label class="col-sm-3 form-label text-right">新的手機號碼</label>
                                <div class="col-sm-8">
                                    <input type="text" id="Phone" name="Phone" class="form-control"
                                           data-val="true" data-val-required="請輸入手機號碼" autocomplete="off">
                                    <span class="field-validation-valid text-danger" data-val-length="不得大於20個字元" data-val-length-max="20" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                <button id="SaveBtn" type="button" class="btn btn-style-fifteen btn-block">儲存並發送驗證碼</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
