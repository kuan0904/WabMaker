@using MyTool.Enums
@using MyTool.Services
@model MyTool.Commons.CiResult<WebMaker.Entity.ViewModels.ValidCodeResultViewModel>
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "驗證信";
}

<section class="hotnews-section mt-65">
    <div class="auto-container">        
        <div class="w-back-g p-20">
            <div class="hotnews-title">
                <span class="hotnews-title-inner mb-20">@Model.Data.ValidType.GetDisplayName()</span>
            </div>

            @if (!Model.IsSuccess)
            {
                <p>@Model.Message</p>
            }
            else
            {
                <div class="singup-inner mb-50">
                    <h3 class="text-orange">@Model.Message</h3>

                    @if (Model.Data.ValidType == ValidType.ForgotPassword)
                    {                     
                        @Html.Partial(WabMaker.Web.Controllers.BaseController.ViewName("Member", "_ResetPassword"),
         new WebMaker.Entity.ViewModels.ResetPasswordViewModel { UserID = Model.Data.UserID })
                    }
                </div>
            }
        </div>
    </div>
</section>

