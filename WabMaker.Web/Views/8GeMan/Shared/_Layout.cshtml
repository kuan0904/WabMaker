@using MyTool.ViewModels
@using WabMaker.Web.Helpers
@{
    SiteInfoViewModel SiteInfo = ApplicationHelper.SiteInfo;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    @Html.Partial("_BaseMeta", SiteInfo)
    <!-- Stylesheets -->
    <link href="~/html/8GeMan/css/bootstrap.css" rel="stylesheet">
    <link href="~/html/8GeMan/plugins/revolution/css/settings.css" rel="stylesheet" type="text/css"><!-- REVOLUTION SETTINGS STYLES -->
    <link href="~/html/8GeMan/plugins/revolution/css/layers.css" rel="stylesheet" type="text/css"><!-- REVOLUTION LAYERS STYLES -->
    <link href="~/html/8GeMan/plugins/revolution/css/navigation.css" rel="stylesheet" type="text/css"><!-- REVOLUTION NAVIGATION STYLES -->
    <link href="~/html/8GeMan/css/style.css?v=2018.11.14" rel="stylesheet">
    <link href="~/html/8GeMan/css/responsive.css?v=2018.11.14" rel="stylesheet">
    <link href="~/html/8GeMan/css/custom.css?v=2018.12.7-2" rel="stylesheet">
    @RenderSection("css", required: false)

    <link rel="shortcut icon" href="~/html/8GeMan/images/8geman_Logo16x16.png" type="image/x-icon">
    <link rel="icon" href="~/html/8GeMan/images/favicon.png" type="image/x-icon">
    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

    @RenderSection("meta", required: false)  
    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->
    <!--[if lt IE 9]><script src="js/respond.js"></script><![endif]-->
</head>

<body>
    <div class="page-wrapper">
        <div class="preloader"></div>

        @*------Banner1------ *@
        @RenderSection("MainSlider", required: false)

        @*------主Menu------ *@
        <!-- Main Header / Header Style One-->
        <header class="main-header header-style-one">
            <!-- Main Box -->
            <div class="main-box">
                <div class="auto-container">
                    <div class="outer-container clearfix">
                        <!--Logo Box-->
                        <div class="logo-box">
                            <div class="logo"><a href="@Url.Action("Index","Home")"><img src="~/html/8GeMan/images/logo.png" alt=""></a></div>
                            <div class="logo-fixed"><a href="@Url.Action("Index","Home")"><img src="~/html/8GeMan/images/logo-m.png?v=2018.12.15" alt=""></a></div>
                        </div>
                        <!--Nav Outer-->
                        <div class="nav-outer clearfix">
                            <!-- Main Menu -->
                            <nav class="main-menu">
                                <div class="navbar-header">
                                    <!-- Toggle Button -->
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <div class="navbar-collapse collapse clearfix">
                                    <ul class="navigation clearfix">
                                        @Html.Action("Menu", "Item", new { position = MyTool.Enums.MenuPosition.Top })
                                    </ul>
                                </div>
                                <div class="search-box-outer">
                                    <div class="dropdown">
                                        <button class="search-box-btn dropdown-toggle" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><span class="fa fa-search"></span></button>
                                        <ul class="dropdown-menu pull-right search-panel" aria-labelledby="dropdownMenu3">
                                            <li class="panel-outer">
                                                <div class="form-container">
                                                    <form method="get" action="@Url.Action("Search", "Home")">
                                                        <div class="form-group">
                                                            <input type="search" name="q" value="" placeholder="Search Here" required="">
                                                            <button type="submit" class="search-btn"><span class="fa fa-search"></span></button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </nav>
                            <!-- Main Menu End-->

                        </div>
                        <!--Nav Outer End-->
                    </div>
                </div>
            </div>

        </header>
        <!--End Main Header -->

        @RenderBody()

        <!--Main Footer-->
        <footer class="main-footer">
            <div class="auto-container border-tb ptb-20">
                <div class="row">
                    <div class="col-md-3 mt-md-25 mb-20">
                        <a href=""><img src="~/html/8GeMan/images/logo-l.png?v=2018.12.14" alt=""></a>
                    </div>
                    <div class="col-md-5">
                        @if (!string.IsNullOrEmpty(SiteInfo.Footer))
                        {
                            @Html.Raw(SiteInfo.Footer)
                        }
                        <div class="copyright visible-md visible-lg">@(SiteInfo?.Copyright)</div>
                    </div>
                    <div class="col-md-4">
                        <div class="footer-list">
                            <ul>
                                @Html.Action("Menu", "Item", new { position = MyTool.Enums.MenuPosition.Bottom })
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="foote-rslider clearfix">
                    <ul>
                        <li><a href="@Url.Action("Index","Member")"><img src="~/html/8GeMan/images/icons/share01.png" alt=""></a></li>
                        @*<li><a href=""><img src="~/html/8GeMan/images/icons/cart.png" alt=""></a></li>*@
                        @if (!string.IsNullOrEmpty(SiteInfo.Facebook))
                        {
                            <li><a href="@SiteInfo.Facebook" target="_blank"><img src="~/html/8GeMan/images/icons/FB.png" alt=""></a></li>
                        }
                        @if (!string.IsNullOrEmpty(SiteInfo.Instagram))
                        {
                            <li><a href="@SiteInfo.Instagram" target="_blank"><img src="~/html/8GeMan/images/icons/IG.png" alt=""></a></li>
                        }
                        @if (!string.IsNullOrEmpty(SiteInfo.YouTube))
                        {
                            <li><a href="@SiteInfo.YouTube" target="_blank"><img src="~/html/8GeMan/images/icons/youtube.png" alt=""></a></li>
                        }
                        @if (!string.IsNullOrEmpty(SiteInfo.Email))
                        {
                            <li><a href="mailto:@(SiteInfo.Email)"><img src="~/html/8GeMan/images/icons/mail.png" alt=""></a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="copyright text-center visible-xs pt-20">@(SiteInfo?.Copyright)</div>
        </footer>
        <!--End Main Footer-->

        <div class="slider-fixed">
            <ul>
                <li><a class="share01" href="@Url.Action("Index","Member")"></a></li>
                @*<li><a class="cart" href=""></a></li>*@
                @if (!string.IsNullOrEmpty(SiteInfo.Facebook))
                {
                    <li><a class="FB" href="@SiteInfo.Facebook" target="_blank"></a></li>
                }
                @if (!string.IsNullOrEmpty(SiteInfo.Instagram))
                {
                    <li><a class="IG" href="@SiteInfo.Instagram" target="_blank"></a></li>
                }
                @if (!string.IsNullOrEmpty(SiteInfo.YouTube))
                {
                    <li><a class="youtube" href="@SiteInfo.YouTube" target="_blank"></a></li>
                }
                @if (!string.IsNullOrEmpty(SiteInfo.Email))
                {
                    <li><a class="mail" href="mailto:@(SiteInfo.Email)"></a></li>
                }
            </ul>
        </div>

    </div>
    <!--End pagewrapper-->
    <!--Scroll to top-->
    <div class="scroll-to-top scroll-to-target" data-target="html"><span class="fa fa-angle-up"></span></div>

    <script src="~/html/8GeMan/js/jquery.js"></script>
    <!--Revolution Slider-->
    <script src="~/html/8GeMan/plugins/revolution/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.migration.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script src="~/html/8GeMan/plugins/revolution/js/extensions/revolution.extension.video.min.js"></script>
    <script src="~/html/8GeMan/js/main-slider-script.js"></script>
    <script src="~/html/8GeMan/js/bootstrap.min.js"></script>
    <script src="~/html/8GeMan/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/html/8GeMan/js/jquery.fancybox.pack.js"></script>
    <script src="~/html/8GeMan/js/jquery.fancybox-media.js"></script>
    <script src="~/html/8GeMan/js/owl.js"></script>
    <script src="~/html/8GeMan/js/wow.js"></script>
    <script src="~/html/8GeMan/js/appear.js"></script> 
    @Html.Partial("_ShowMessage")
    @Html.Partial("_BaseScripts")
    @RenderSection("scripts", required: false)
    <script src="~/html/8GeMan/js/script.js?v=2018.11.29"></script>

</body>
</html>