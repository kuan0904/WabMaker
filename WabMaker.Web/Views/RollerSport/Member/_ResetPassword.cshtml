@using MyTool.Enums
@model WebMaker.Entity.ViewModels.ResetPasswordViewModel

@* 重設密碼  *@
@using (Html.BeginForm("ResetPassword", "Member", FormMethod.Post))
{
    <input type="hidden" id="returnUrl" value="@Url.Action("Login", "Member", new  { })" />
    <input type="hidden" id="successMessage" data-title="重設密碼" value="@MyTool.Enums.MessageType.Confirm" />

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-lg-12">
            <div class="account g-form">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12"></div>
                    <div class="col-lg-6 col-md-6 col-sm-12 mt-3">
                        <label for="Password" class="label-helper">* 密碼</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "請輸入 6-12 個英數字" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12"></div>
                    <div class="col-lg-6 col-md-6 col-sm-12 mt-3">
                        <label for="PasswordConfirm" class="label-helper">* 重新輸入一次密碼</label>
                        @Html.PasswordFor(model => model.PasswordConfirm, new { @class = "form-control", placeholder = "請再次輸入密碼" })
                        @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 mt-5 mb-5" style="padding-bottom: 150px;">
            <div class="btn-width-sm"><input id="SaveBtn" type="button" class="DoneBtn btn-sm" value="確認送出" /></div>
        </div>
    </div>
}
